<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission
        android:name="android.permission.BLUETOOTH_SCAN"
        android:usesPermissionFlags="neverForLocation" />
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADVERTISE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />


    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/baseline_back_hand_24"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_launcher_foreground"
        android:supportsRtl="true"
        android:theme="@style/Theme.BLEModule"
        tools:targetApi="31">

        <activity
            android:name=".ui.view.ChatActivity"
            android:label="Main"
            android:exported="true"
            android:parentActivityName=".ui.view.ChatActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.view.ChatActivity"/>
        </activity>

        <activity
            android:name=".ui.view.MainActivity"
            android:label="Chat"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <!-- (기존의 parentActivity 설정은 삭제하거나 MainActivity로 바꿔주시면 됩니다) -->
        </activity>

        <!-- BLE 백그라운드 서비스 -->
        <service
            android:name=".service.BleService"
            android:exported="false"
            tools:ignore="Instantiatable" />

    </application>

</manifest>