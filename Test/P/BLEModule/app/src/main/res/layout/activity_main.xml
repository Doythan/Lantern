<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- 닉네임 + 서비스 토글 -->
    <EditText
        android:id="@+id/et_my_device_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="닉네임"
        android:maxLength="12"
        app:layout_constraintEnd_toStartOf="@+id/btn_service_toggle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/btn_service_toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="서비스 시작"
        app:layout_constraintBaseline_toBaselineOf="@id/et_my_device_id"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 주변 기기 목록 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_devices"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:background="#EEE"
        app:layout_constraintTop_toBottomOf="@id/et_my_device_id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 채팅 입력 -->
    <EditText
        android:id="@+id/et_chat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="메시지를 입력하세요"
        app:layout_constraintTop_toBottomOf="@id/rv_devices"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_send_chat"/>

    <Button
        android:id="@+id/btn_send_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="전송"
        app:layout_constraintBottom_toBottomOf="@id/et_chat"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 로그 -->
    <TextView
        android:id="@+id/tv_log_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log"
        app:layout_constraintTop_toBottomOf="@id/et_chat"
        app:layout_constraintStart_toStartOf="parent"/>

    <ScrollView
        android:id="@+id/sv_log_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#11111111"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/tv_log_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/tv_log"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:padding="8dp"/>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
